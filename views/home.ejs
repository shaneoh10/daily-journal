<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= homeContent %></p>

<div class="text-center">
    <a href="/compose" class="btn btn-primary">Compose!</a>
</div>

<% allPosts.forEach((post) => { %>
    <h2><%= post.title %></h2>
    <p>
        <%= post.body.substring(0, 100) + "..." %>
        <a href="/posts/<%=post.title%>">Read more...</a>
    </p>
<% }); %>

<%- include('partials/footer'); -%>